<Window x:Class="Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
           
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Background="Gray" Margin="15">
            <WrapPanel Grid.Column="0"  Margin="10" HorizontalAlignment="Center" Background="LightGray">
                
            </WrapPanel>
        </Border>
        <Border Background="Gray" Margin="15" Grid.Column="1">
            <WrapPanel Grid.Column="1"  Margin="10" HorizontalAlignment="Center" Background="LightGray">
                <WrapPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center"  Background="White">
                    <ComboBox></ComboBox>
                </WrapPanel>
            </WrapPanel>
        </Border>
        
    </Grid>
</Window>
